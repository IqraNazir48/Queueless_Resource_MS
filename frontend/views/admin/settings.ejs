<script>
let settings = null;
let currentManagingType = null;

// Generate time options based on duration (30 min intervals for flexibility)
function generateTimeOptions() {
    const times = [];
    for (let h = 0; h < 24; h++) {
        times.push(`${String(h).padStart(2, '0')}:00`);
        times.push(`${String(h).padStart(2, '0')}:30`);
    }
    return times;
}

// Calculate end time based on start time and duration
function calculateEndTime(startTime, durationMinutes) {
    const [startHour, startMinute] = startTime.split(':').map(Number);
    let totalMinutes = startHour * 60 + startMinute + durationMinutes;
    
    // Handle overflow past midnight
    if (totalMinutes >= 24 * 60) {
        totalMinutes = totalMinutes % (24 * 60);
    }
    
    const endHour = Math.floor(totalMinutes / 60);
    const endMinute = totalMinutes % 60;
    
    return `${String(endHour).padStart(2, '0')}:${String(endMinute).padStart(2, '0')}`;
}

// Populate time dropdowns
function populateTimeDropdowns() {
    const times = generateTimeOptions();
    const startSelect = document.getElementById('slotStartTime');
    
    startSelect.innerHTML = '<option value="">Select start time</option>';
    
    times.forEach(time => {
        startSelect.innerHTML += `<option value="${time}">${time}</option>`;
    });
}

function getToken() {
    return localStorage.getItem('token');
}

function showMessage(message, type = 'info') {
    const container = document.getElementById('messageContainer');
    container.innerHTML = `
        <div class="alert alert-${type} alert-dismissible fade show">
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    `;
    container.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
}

async function loadSettings() {
    const token = getToken();
    
    try {
        const response = await fetch('/api/settings', {
            headers: { 'Authorization': `Bearer ${token}` }
        });
        
        if (response.status === 401) {
            window.location.href = '/login';
            return;
        }
        
        settings = await response.json();
        displayResourceTypes();
        displayBookingLimits();
    } catch (error) {
        showMessage('Error loading settings', 'danger');
    }
}

function displayResourceTypes() {
    const container = document.getElementById('resourceTypesList');
    container.innerHTML = '';
    
    if (!settings.resourceTypes || settings.resourceTypes.length === 0) {
        container.innerHTML = '<p class="text-muted">No resource types defined.</p>';
        return;
    }
    
    settings.resourceTypes.forEach(rt => {
        const slotCount = rt.timeSlots ? rt.timeSlots.length : 0;
        const item = `
            <div class="d-flex justify-content-between align-items-center mb-3 p-3 border rounded">
                <div class="flex-grow-1">
                    <div class="d-flex align-items-center mb-2">
                        <i class="bi bi-${rt.icon} me-2 fs-4"></i>
                        <strong class="fs-5">${rt.label}</strong>
                        <span class="badge badge-secondary ms-2">${rt.value}</span>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-clock"></i> ${slotCount} time slot${slotCount !== 1 ? 's' : ''}
                    </small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-primary" onclick='openSlotManager("${rt.value}", "${rt.label}")'>
                        <i class="bi bi-clock-history"></i> Manage Slots
                    </button>
                    <button class="btn btn-sm btn-danger" onclick="removeResourceType('${rt.value}')">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        `;
        container.innerHTML += item;
    });
}

function openSlotManager(typeValue, typeLabel) {
    currentManagingType = typeValue;
    document.getElementById('currentResourceType').value = typeValue;
    document.getElementById('modalResourceTypeName').textContent = typeLabel;
    
    populateTimeDropdowns();
    displayCurrentSlots();
    generateQuickAddButtons();
    
    const modal = new bootstrap.Modal(document.getElementById('manageSlotsModal'));
    modal.show();
}

function displayCurrentSlots() {
    const container = document.getElementById('currentSlotsList');
    const type = settings.resourceTypes.find(rt => rt.value === currentManagingType);
    
    if (!type || !type.timeSlots || type.timeSlots.length === 0) {
        container.innerHTML = '<p class="text-muted text-center my-3">No time slots configured yet. Add slots below.</p>';
        return;
    }
    
    const sortedSlots = [...type.timeSlots].sort();
    
    container.innerHTML = sortedSlots.map(slot => `
        <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded" style="background-color: var(--bg-secondary);">
            <span><i class="bi bi-clock-fill text-primary"></i> <strong>${slot}</strong></span>
            <button class="btn btn-sm btn-danger" onclick="removeSlotFromType('${currentManagingType}', '${slot}')">
                <i class="bi bi-trash"></i> Remove
            </button>
        </div>
    `).join('');
}

function generateQuickAddButtons() {
    const container = document.getElementById('quickAddSlots');
    const type = settings.resourceTypes.find(rt => rt.value === currentManagingType);
    const existingSlots = type && type.timeSlots ? type.timeSlots : [];
    
    // Get selected duration
    const duration = parseInt(document.querySelector('input[name="slotDuration"]:checked')?.value || 60);
    
    // Generate suggestions based on duration
    const suggestions = [];
    const step = duration === 30 ? 30 : 60; // For 30min use 30min steps, otherwise hourly
    
    for (let minutes = 8 * 60; minutes < 23 * 60; minutes += step) {
        const startHour = Math.floor(minutes / 60);
        const startMin = minutes % 60;
        const startTime = `${String(startHour).padStart(2, '0')}:${String(startMin).padStart(2, '0')}`;
        const endTime = calculateEndTime(startTime, duration);
        const slot = `${startTime}-${endTime}`;
        
        if (!existingSlots.includes(slot)) {
            suggestions.push(slot);
        }
    }
    
    if (suggestions.length === 0) {
        container.innerHTML = '<small class="text-muted">All suggested slots for this duration are added</small>';
        return;
    }
    
    container.innerHTML = suggestions.slice(0, 12).map(slot => `
        <button class="btn btn-sm btn-outline-primary" onclick="quickAddSlot('${slot}')">
            <i class="bi bi-plus-circle"></i> ${slot}
        </button>
    `).join('');
}

// Update quick add buttons when duration changes
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('input[name="slotDuration"]').forEach(radio => {
        radio.addEventListener('change', function() {
            if (currentManagingType) {
                generateQuickAddButtons();
            }
        });
    });
});

async function quickAddSlot(slot) {
    await addSlotToType(currentManagingType, slot);
}

document.getElementById('addSlotBtn').addEventListener('click', async function() {
    const startTime = document.getElementById('slotStartTime').value;
    const duration = parseInt(document.querySelector('input[name="slotDuration"]:checked')?.value || 60);
    
    if (!startTime) {
        showMessage('Please select a start time', 'warning');
        return;
    }
    
    const endTime = calculateEndTime(startTime, duration);
    const slot = `${startTime}-${endTime}`;
    
    await addSlotToType(currentManagingType, slot);
});

async function addSlotToType(resourceType, slot) {
    const token = getToken();
    
    if (!token) {
        showMessage('Please login again', 'danger');
        setTimeout(() => window.location.href = '/login', 1500);
        return;
    }
    
    const btn = document.getElementById('addSlotBtn');
    const originalHTML = btn.innerHTML;
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
    
    try {
        console.log('Sending request:', {
            url: '/api/settings/resource-types/time-slots',
            method: 'POST',
            body: { resourceType, slot }
        });
        
        const response = await fetch('/api/settings/resource-types/time-slots', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({ resourceType, slot })
        });
        
        console.log('Response status:', response.status);
        console.log('Response headers:', response.headers.get('content-type'));
        
        const contentType = response.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
            const textResponse = await response.text();
            console.error('Non-JSON response:', textResponse);
            showMessage('Server error: Expected JSON but got HTML. Check server logs.', 'danger');
            return;
        }
        
        const data = await response.json();
        console.log('Response data:', data);
        
        if (response.ok) {
            showMessage('Time slot added successfully!', 'success');
            settings = data.settings;
            displayResourceTypes();
            displayCurrentSlots();
            generateQuickAddButtons();
            
            // Reset dropdown
            document.getElementById('slotStartTime').value = '';
        } else {
            showMessage(data.message || 'Error adding time slot', 'danger');
            console.error('Error response:', data);
        }
    } catch (error) {
        console.error('Network error:', error);
        showMessage('Network error: ' + error.message + '. Check browser console for details.', 'danger');
    } finally {
        btn.disabled = false;
        btn.innerHTML = originalHTML;
    }
}

async function removeSlotFromType(resourceType, slot) {
    if (!confirm(`Remove time slot ${slot}?`)) return;
    
    const token = getToken();
    
    try {
        const response = await fetch('/api/settings/resource-types/time-slots', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
            },
            body: JSON.stringify({ resourceType, slot })
        });
        
        const data = await response.json();
        
        if (response.ok) {
            showMessage('Time slot removed successfully!', 'success');
            settings = data.settings;
            displayResourceTypes();
            displayCurrentSlots();
            generateQuickAddButtons();
        } else {
            showMessage(data.message || 'Error removing time slot', 'danger');
            console.error('Error response:', data);
        }
    } catch (error) {
        console.error('Network error:', error);
        showMessage('Network error: ' + error.message, 'danger');
    }
}

function displayBookingLimits() {
    document.getElementById('dailyLimit').value = settings.bookingLimits.dailyLimit;
    document.getElementById('weeklyLimit').value = settings.bookingLimits.weeklyLimit;
    document.getElementById('advanceBookingLimit').value = settings.bookingLimits.advanceBookingLimit;
}

